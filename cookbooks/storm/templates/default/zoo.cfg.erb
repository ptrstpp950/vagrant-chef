maxClientCnxns=50
# The number of milliseconds of each tick
tickTime=2000
# The number of ticks that the initial 
# synchronization phase can take
initLimit=10
# The number of ticks that can pass between 
# sending a request and getting an acknowledgement
syncLimit=5
# the directory where the snapshot is stored.
dataDir=/var/lib/zookeeper
# the port at which the clients will connect
clientPort=2181

## log configuration & purging

# the number of transactions when a new snapshot is taken and a new log file is started
snapCount=10000
# autopurging to last 3 snapshots with no scripts cronned needed, every 1 hour
autopurge.snapRetainCount=3
autopurge.purgeInterval=1

<% x = 1  %>
<% @nodes.each do |hostname| %>
server.<%= x %>=<%= hostname %>:2888:3888
  <%x += 1%>
<% end %>

